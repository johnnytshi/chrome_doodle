{
  "manifest_version": 3,
  "name": "Doodle",
  "version": "1.1",
  "description": "Doodle on any webpage",
  "permissions": ["activeTab"],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "action": {
    "default_title": "Toggle Doodle",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "commands": {
    "cycle-mode": {
      "suggested_key": {
        "default": "Alt+A"
      },
      "description": "Cycle annotation mode (Off → Annotate → View)"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
